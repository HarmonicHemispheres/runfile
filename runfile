# supports multi line varaibles
!var pcmd = {{
echo c1 &&
echo c2
}}

# supports platform specific scripts
[linux]>> ${pcmd}
[mac]>> ${pcmd}
[win]>> powershell ping localhost


!cmd build {
    [linux]>> echo help
    [mac]>> echo help
    [win]>> powershell echo hiaaaa
}